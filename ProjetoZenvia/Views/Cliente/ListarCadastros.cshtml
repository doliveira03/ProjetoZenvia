@model ProjetoZenvia.Models.ClienteModel
@{
    ViewBag.Title = "Lista de Cadastros";
}

<div class="col-sm-12 text-center textoH2">
    <h2>Clientes Cadastrados</h2>
</div>

<div class="row">
    <div class="col-xs-12">
        <div class="box box-danger">
            <div class="box-body">
                <table id="ListaCadastros" class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Nome</th>
                            <th>Nascimento</th>
                            <th>CPF</th>
                            <th>RG</th>
                            <th>Redes Sociais</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Cadastros)
                        {
                            <template></template>
                            <tr>
                                <td>
                                    <a href="@Url.Action("Cadastro", "Home", new { id = item.ClienteID })"> @item.Nome </a>
                                </td>
                                <td>
                                    @item.DataNascimento.ToString("dd/MM/yyyy")
                                </td>
                                <td>
                                    @item.CPF
                                </td>
                                <td>
                                    @item.RG
                                </td>
                                <td>
                                    <ul>
                                        <li>Facebook: @item.Facebook</li>
                                        <li>Linkedin: @item.Linkedin</li>
                                        <li>Instagram: @item.Instagram</li>
                                        <li>Twitter: @item.Twitter</li>
                                    </ul>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div><!-- /.box-body -->
        </div><!-- /.box -->
    </div>
</div>
@section scripts{
    <script type="text/javascript">

        $(function () {
            $('#ListaCadastros').DataTable({
                "paging": true,
                "lengthChange": false,
                "searching": true,
                "ordering": true,
                "info": true,
                "autoWidth": true
            });
        });

    </script>
}